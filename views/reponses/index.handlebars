<section class="body grey column">
    <div class="ui container">
        <div class="ui row"></div>
        <div class="ui segment">
            <h2 class="ui   header">Test : {{test.nom}}
                <form method="post" action="/tests/{{test.id}}?_method=DELETE">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="ui button right floated red">
                        <i class="icon trash center"></i> Supprimer le test
                    </button>
                </form>
                <a class="ui button right floated" href="/tests/edit/{{test.id}}">
                    <i class="icon pencil alternate center"></i> Modifier le test
                </a>
            </h2>
            <div class="ui clearing divider"></div>
            <p></p>
            <div class="ui top attached tabular menu ">
                <a class="item" href="/tests/details/{{test.id}}">
                    Test
                </a>
                <a class="item " href="/tests/details/{{test.id}}/questions">
                    Questions
                    <span class="ui primary horizontal label">{{test.questions}}/{{questions.length}}</span>
                </a>
                <a class="item active" href="/tests/details/{{test.id}}/responses">
                    Réponses reçues
                    <span class="ui green  horizontal label">{{instances.length}}</span>
                </a>
            </div>
            <div class="ui bottom attached segment">

                <table class="ui sortable celled table">
                    <thead>
                        <tr>
                            <th class="">Nom</th>
                            <th class="">Date</th>
                            <th class="sorted ascending">Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each instances}}
                        <tr>
                            <td>{{apprenant}}</td>
                            <td >{{date}}</td>
                            <td>{{score}}</td>
                        </tr>
                       {{/each}}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>{{instances.length}} Réponses</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>



            </div>
        </div>
    </div>
</section>