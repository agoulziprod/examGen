<section class="body grey column">
  <div class="ui container">
    <div class="ui segment">
      <h2 class="ui   header">Test : {{test.nom}}
        <form method="post" action="/tests/{{test.id}}?_method=DELETE">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="ui button right floated red">
            <i class="icon trash center"></i> Supprimer le test
          </button>
        </form>
        <a class="ui button right floated" href="/tests/edit/{{test.id}}">
          <i class="icon pencil alternate center"></i> Modifier le test
        </a>
      </h2>
      <div class="ui clearing divider"></div>
      <p></p>
      <div class="ui top attached tabular menu ">
        <a class="item active">
          Test
        </a>
        <a class="item" href="/tests/details/{{test.id}}/questions">
          Questions
          <span class="ui primary horizontal label">12</span>

        </a>
        <a class="item" href="/tests/details/{{test.id}}/responses">
          Réponses reçues
          <span class="ui primary horizontal label">12</span>

        </a>
      </div>
      <div class="ui bottom attached segment">

        <h4 class="ui header">
          Id:
          <div class="sub header">{{test.id}}</div>
        </h4>
        <h4 class="ui header">
          Nom:
          <div class="sub header">{{test.nom}}</div>
        </h4>
        <h4 class="ui header">
          Durée en minute:
          <div class="sub header">{{test.duree}}</div>
        </h4>
        <h4 class="ui header">
          Status:
          <div class="sub header">{{test.isActive}}</div>
        </h4>
        <h4 class="ui header">
          Message fin:
          <div class="sub header">{{test.messageDebut}}</div>
        </h4>
        <h4 class="ui header">
          Message fin:
          <div class="sub header">{{test.messageFin}}</div>
        </h4>
        <h4 class="ui header">
          Date de création:
          <div class="sub header">{{test.date}}</div>
        </h4>


      </div>
    </div>
  </div>
</section>